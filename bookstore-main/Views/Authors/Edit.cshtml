@{
    ViewData["Title"] = "Edit Author";
}

@model system.Models.Author;

<h1>Edit Author</h1>

<div>
    <a class="btn btn-primary" role="button" asp-controller="Books" asp-action="List">
        Back to Author List
    </a>
</div>

<form asp-action="Edit">
    <div class="mt-3">
        <label asp-for="Name">Name</label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <label asp-for="Biography">Biography</label>
        <input class="form-control" asp-for="Biography" />
        <span asp-validation-for="Biography" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">
            Create
        </button>
    </div>
</form>